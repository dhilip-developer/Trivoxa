rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Images are publicly readable
    match /{allPaths=**} {
      allow read: if true;
      // Only authenticated users can write
      allow write: if request.auth != null;
    }
    
    // Project images
    match /projects/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Tech stack icons
    match /tech-icons/{iconId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
